{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@entities/*": ["./src/core/domain/entities/*"],
      "@ports/*": ["./src/core/domain/ports/*"],
      "@services/*": ["./src/core/domain/services/*"],
      "@usecases/*": ["./src/core/application/use_cases/*"],
      "@controllers/*": ["./src/adapters/driver/controllers/*"],
      "@dto/*": ["./src/adapters/driver/dto/*"],
      "@repositories/*": ["src/adapters/driven/repositories/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}